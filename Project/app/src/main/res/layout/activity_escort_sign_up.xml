<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="56dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <ImageView android:src="@drawable/logo"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center_horizontal" />

        <!--  Name Label -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">
            <EditText android:id="@+id/input_loginName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:hint="Login name" />
        </android.support.design.widget.TextInputLayout>
        <!-- Password Label -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">
            <EditText android:id="@+id/input_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="Password"/>
        </android.support.design.widget.TextInputLayout>

        <!-- Last name Label -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">
            <EditText android:id="@+id/input_lastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:hint="Last name" />
        </android.support.design.widget.TextInputLayout>
        <!-- First name Label -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">
            <EditText android:id="@+id/input_firstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:hint="First name" />
        </android.support.design.widget.TextInputLayout>

        <!-- Chinese ful name Label -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">
            <EditText android:id="@+id/input_chineseName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:hint="Chinese full name" />
        </android.support.design.widget.TextInputLayout>
        <!-- YMECA membership id Label -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">
            <EditText android:id="@+id/input_membershipID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="YMECA membership id"/>
        </android.support.design.widget.TextInputLayout>
        <!-- Bank account number Label -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">
            <EditText android:id="@+id/input_bankAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textNoSuggestions"
                android:hint="Bank account number"/>
        </android.support.design.widget.TextInputLayout>

        <TextView android:id="@+id/gender_field"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Do you have any preference for the gender of the patient ?"
            android:gravity="center|left"
            android:textSize="18dip"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp" />

        <!-- User gender Label-->
        <Spinner
            android:id="@+id/gender_spinner"
            android:layout_below="@+id/gender_field"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <!-- height Label -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">
            <EditText android:id="@+id/input_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:hint="Height" />
        </android.support.design.widget.TextInputLayout>

        <!-- weight Label -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">
            <EditText android:id="@+id/input_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:hint="Weight" />
        </android.support.design.widget.TextInputLayout>
        <!-- Skills -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">
            <EditText android:id="@+id/input_skills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:hint="skills" />
        </android.support.design.widget.TextInputLayout>
        <!-- Experinece -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">
            <EditText android:id="@+id/input_experience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:hint="Experince" />
        </android.support.design.widget.TextInputLayout>

        <TextView android:id="@+id/bday_field"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Date of birth"
            android:gravity="center|left"
            android:textSize="16dip" />

        <!-- birthday setting -->



        <DatePicker
            android:id="@+id/datePicker2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:startYear="1950"
            android:endYear="2016"/>

        <!-- Residential Adress -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">
            <EditText android:id="@+id/input_adress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress"
                android:hint="Residential Adress" />
        </android.support.design.widget.TextInputLayout>

        <TextView android:id="@+id/district_field"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Nearest District of Hong Kong"
            android:gravity="center|left"
            android:textSize="18dip"
            android:layout_marginTop="10dp"
            android:textIsSelectable="true"
            android:layout_marginLeft="5dp" />

        <!-- User gender Label-->
        <Spinner
            android:id="@+id/district_spinner"
            android:layout_below="@+id/gender_field"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <!-- Occupation -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">
            <EditText android:id="@+id/input_occupation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:hint="Occupation" />
        </android.support.design.widget.TextInputLayout>
        <TextView android:id="@+id/dialect_field"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="What dialect(s) do you speak ?"
            android:gravity="center|left"
            android:textSize="18dip"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp" />

        <CheckBox
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Dialect 1"
            android:checked="true" />
        <CheckBox
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Dialect 2"
            android:checked="true" />
        <CheckBox
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Dialect 3"
            android:checked="true" />
        <CheckBox
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Dialect 4"
            android:checked="true" />

        <TextView android:id="@+id/certificat_field"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Do you have a First-aid certificate ?"
            android:gravity="center|left"
            android:textSize="18dip"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp" />

        <!-- aid-certif Label-->
        <Spinner
            android:id="@+id/yes_no_spinner"
            android:layout_below="@+id/gender_field"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />


        <!-- Telephone number Label -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">
            <EditText android:id="@+id/input_tel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPhonetic"
                android:hint="Mobile number"/>
        </android.support.design.widget.TextInputLayout>
        <!-- Email Label -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">
            <EditText android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="Email" />
        </android.support.design.widget.TextInputLayout>

        <TextView android:id="@+id/avai_field"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Please add your availibitie(s) "
            android:gravity="center|left"
            android:textSize="18dip"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp" />

        <Spinner
            android:id="@+id/days_spinner"
            android:layout_below="@+id/avai_field"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <Spinner
            android:id="@+id/time_spinner"
            android:layout_below="@+id/days_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />






        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_add"
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Add"
            android:foregroundGravity="right"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="vertical" />
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="My availabilities" />

            <TextView
                android:id="@+id/text"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textSize="8sp"
                android:text=""
                android:scrollbars="vertical"
                android:maxLines = "100"
                android:paddingLeft="5dip"
                android:paddingTop="5dip" />

        </TableRow>






        <!-- Signup Button -->
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_signup"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:padding="12dp"
            android:text="Sign up"
            android:foregroundGravity="right" />

        <TextView android:id="@+id/link_login"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Already a member? Login"
            android:gravity="center"
            android:textSize="16dip" />

    </LinearLayout>
</ScrollView>
