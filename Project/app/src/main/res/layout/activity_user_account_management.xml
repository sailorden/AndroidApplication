<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="hk.ust.cse.com4521.escort_app.UserAccountManagementActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Staff Account"
        android:id="@+id/btn_createStaffAccount"
        android:layout_above="@+id/btn_deleteAccount"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Account By Name"
        android:id="@+id/btn_deleteAccount"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/btn_createStaffAccount"
        android:layout_alignEnd="@+id/btn_createStaffAccount"
        android:layout_alignLeft="@+id/btn_createStaffAccount"
        android:layout_alignStart="@+id/btn_createStaffAccount" />

    <ImageView
        android:src="@drawable/logo"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Account By YMCA member ID"
        android:id="@+id/btn_deleteAccountByYMCAid"
        android:layout_below="@+id/btn_deleteAccount"
        android:layout_alignLeft="@+id/btn_deleteAccount"
        android:layout_alignStart="@+id/btn_deleteAccount"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
